{
    "manifest_version": 2,
    "name": "Draaft Bookmarker",
    "version": "0.2.0",

    "description": "Save selected text to draaft.co",

    "author": "Tony Findeisen",

    "permissions": ["contextMenus"],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "lib/content.js"
            ],
            "css": [
                "lib/style.css"
            ],
            "run_at": "document_end"
        }
    ],

    "icons": {
        "16":  "icon/16.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    }
}