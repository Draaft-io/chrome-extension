{
    "manifest_version": 2,
    "name": "Draaft Bookmarker",
    "version": "0.2.3",

    "description": "Save selected text to draaft.co",

    "author": "Tony Findeisen",

    "permissions": [ "contextMenus", "management", "activeTab" ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "default_title": "Collect the Web",

        "default_icon": {
            "16": "icon/16.png",
            "48": "icon/48.png",
            "128": "icon/128.png"
        },

        "default_popup": "src/index.html"
    },

    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "lib/style.css"
            ],
            "run_at": "document_end"
        }
    ]
}
