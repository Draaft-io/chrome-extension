{
    "manifest_version": 2,
    "name": "Draaft Bookmarker",
    "version": "0.4.1",

    "description": "Save selected text to draaft.co",

    "author": "JÃ¶rg Hartmann",

    "permissions": [ "tabs", "management", "activeTab", "https://localhost/", "https://beta.draaft.co/" ],

    "browser_action": {
        "default_title": "Collect the Web",

        "default_icon": {
            "16": "icon/16.png",
            "48": "icon/48.png",
            "128": "icon/128.png"
        },

        "default_popup": "src/index.html"
    },

    "background": { "scripts": [ "background.js" ] },

    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "./dist/content.js"
            ],
            "css": [
                "lib/style.css"
            ],
            "run_at": "document_end"
        }
    ]
}
